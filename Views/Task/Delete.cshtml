@model Mangement.Models.EmployeeTask

@{
    ViewData["Title"] = "Delete Task";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-trash me-2"></i>Delete Task</h2>
    <div>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
            <i class="fas fa-info-circle me-2"></i>Details
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="alert alert-danger">
            <h4 class="alert-heading">Warning!</h4>
            <p>Are you sure you want to delete this task? This action cannot be undone.</p>
        </div>

        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Title</dt>
                    <dd class="col-sm-8">@Model.Title</dd>

                    <dt class="col-sm-4">Description</dt>
                    <dd class="col-sm-8">@Model.Description</dd>

                    <dt class="col-sm-4">Assigned To</dt>
                    <dd class="col-sm-8">@Model.AssignedTo?.Name</dd>

                    <dt class="col-sm-4">Created By</dt>
                    <dd class="col-sm-8">@Model.CreatedBy?.Name</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Start Date</dt>
                    <dd class="col-sm-8">@Model.StartDate.ToString("MM/dd/yyyy")</dd>

                    <dt class="col-sm-4">Due Date</dt>
                    <dd class="col-sm-8">@Model.DueDate.ToString("MM/dd/yyyy")</dd>

                    <dt class="col-sm-4">Priority</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Priority == "High" ? "bg-danger" : 
                                          Model.Priority == "Medium" ? "bg-warning" : "bg-info")">
                            @Model.Priority
                        </span>
                    </dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(Model.Status == "Completed" ? "bg-success" : 
                                          Model.Status == "In Progress" ? "bg-warning" : "bg-danger")">
                            @Model.Status
                        </span>
                    </dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="text-end">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash me-2"></i>Delete Task
                </button>
            </div>
        </form>
    </div>
</div> 