@model Mangement.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Delete User</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Are you sure you want to delete this user?</h4>
                    </div>
                    <dl class="row">
                        <dt class="col-sm-2">Full Name</dt>
                        <dd class="col-sm-10">@Model.Name</dd>
                        
                        <dt class="col-sm-2">Email</dt>
                        <dd class="col-sm-10">@Model.Email</dd>
                        
                        <dt class="col-sm-2">Phone Number</dt>
                        <dd class="col-sm-10">@Model.PhoneNumber</dd>
                        
                        <dt class="col-sm-2">Position</dt>
                        <dd class="col-sm-10">@Model.Position</dd>
                        
                        <dt class="col-sm-2">Department</dt>
                        <dd class="col-sm-10">@(Model.Department?.Name ?? "N/A")</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 