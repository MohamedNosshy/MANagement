@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x mb-3 text-primary"></i>
                <h5 class="card-title">Total Employees</h5>
                <h2 class="card-text">@ViewBag.TotalEmployees</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-building fa-3x mb-3 text-success"></i>
                <h5 class="card-title">Departments</h5>
                <h2 class="card-text">@ViewBag.TotalDepartments</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-tasks fa-3x mb-3 text-warning"></i>
                <h5 class="card-title">Active Tasks</h5>
                <h2 class="card-text">@ViewBag.ActiveTasks</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="fas fa-calendar-alt fa-3x mb-3 text-danger"></i>
                <h5 class="card-title">Pending Leaves</h5>
                <h2 class="card-text">@ViewBag.PendingLeaves</h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-tasks me-2"></i> Recent Tasks
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Assigned To</th>
                                <th>Status</th>
                                <th>Due Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var task in ViewBag.RecentTasks)
                            {
                                <tr>
                                    <td>@task.Title</td>
                                    <td>@task.AssignedTo.Name</td>
                                    <td>
                                        <span class="badge @(task.Status == "Completed" ? "bg-success" : 
                                                          task.Status == "In Progress" ? "bg-warning" : "bg-danger")">
                                            @task.Status
                                        </span>
                                    </td>
                                    <td>@task.DueDate.ToString("MM/dd/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-calendar-alt me-2"></i> Recent Leaves
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Employee</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Duration</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var leave in ViewBag.RecentLeaves)
                            {
                                <tr>
                                    <td>@leave.User.Name</td>
                                    <td>@leave.Type</td>
                                    <td>
                                        <span class="badge @(leave.Status == "Approved" ? "bg-success" : 
                                                          leave.Status == "Pending" ? "bg-warning" : "bg-danger")">
                                            @leave.Status
                                        </span>
                                    </td>
                                    <td>@((leave.EndDate - leave.StartDate).Days + 1) days</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 mb-4">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-money-bill-wave me-2"></i> Recent Salary Payments
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Employee</th>
                                <th>Base Salary</th>
                                <th>Allowances</th>
                                <th>Deductions</th>
                                <th>Total</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var salary in ViewBag.RecentSalaries)
                            {
                                <tr>
                                    <td>@salary.User.Name</td>
                                    <td>@salary.BaseSalary.ToString("C")</td>
                                    <td>@salary.Allowances.ToString("C")</td>
                                    <td>@salary.Deductions.ToString("C")</td>
                                    <td>@salary.TotalSalary.ToString("C")</td>
                                    <td>
                                        <span class="badge @(salary.IsPaid ? "bg-success" : "bg-warning")">
                                            @(salary.IsPaid ? "Paid" : "Pending")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
