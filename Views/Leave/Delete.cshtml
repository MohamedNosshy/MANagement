@model Mangement.Models.Leave

@{
    ViewData["Title"] = "Delete Leave Request";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Delete Leave Request</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Are you sure you want to delete this leave request?</h4>
                    </div>
                    <dl class="row">
                        <dt class="col-sm-2">Employee</dt>
                        <dd class="col-sm-10">@Model.User?.Name</dd>
                        
                        <dt class="col-sm-2">Leave Type</dt>
                        <dd class="col-sm-10">@Model.Type</dd>
                        
                        <dt class="col-sm-2">Start Date</dt>
                        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>
                        
                        <dt class="col-sm-2">End Date</dt>
                        <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>
                        
                        <dt class="col-sm-2">Status</dt>
                        <dd class="col-sm-10">
                            <span class="badge badge-@(Model.Status == "Approved" ? "success" : Model.Status == "Rejected" ? "danger" : "warning")">
                                @Model.Status
                            </span>
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 