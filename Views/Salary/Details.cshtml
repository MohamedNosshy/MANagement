@model Mangement.Models.Salary

@{
    ViewData["Title"] = "Salary Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Salary Record Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">Employee</dt>
                        <dd class="col-sm-10">@Model.User?.Name</dd>
                        
                        <dt class="col-sm-2">Base Salary</dt>
                        <dd class="col-sm-10">@Model.BaseSalary.ToString("C")</dd>
                        
                        <dt class="col-sm-2">Allowances</dt>
                        <dd class="col-sm-10">@(Model.Allowances?.ToString("C") ?? "$0.00")</dd>
                        
                        <dt class="col-sm-2">Deductions</dt>
                        <dd class="col-sm-10">@(Model.Deductions?.ToString("C") ?? "$0.00")</dd>
                        
                        <dt class="col-sm-2">Total Salary</dt>
                        <dd class="col-sm-10">
                            <strong class="text-primary">@Model.TotalSalary.ToString("C")</strong>
                        </dd>
                        
                        <dt class="col-sm-2">Payment Date</dt>
                        <dd class="col-sm-10">@Model.PaymentDate.ToShortDateString()</dd>
                        
                        <dt class="col-sm-2">Status</dt>
                        <dd class="col-sm-10">
                            <span class="badge badge-@(Model.IsPaid ? "success" : "warning")">
                                @(Model.IsPaid ? "Paid" : "Pending")
                            </span>
                        </dd>
                        
                        <dt class="col-sm-2">Created At</dt>
                        <dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>
                        
                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <dt class="col-sm-2">Notes</dt>
                            <dd class="col-sm-10">@Model.Notes</dd>
                        }
                    </dl>
                    <div>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 