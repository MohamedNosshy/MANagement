@model Mangement.Models.Salary

@{
    ViewData["Title"] = "إضافة مرتب جديد";
}

<div class="container mt-4">
    <h2>إضافة مرتب جديد</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="UserId" class="control-label">الموظف</label>
                    <select asp-for="UserId" class="form-control">
                        @foreach (var user in ViewBag.Users)
                        {
                            <option value="@user.Id">@user.Name</option>
                        }
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="BaseSalary" class="control-label">المرتب الأساسي</label>
                    <input asp-for="BaseSalary" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="BaseSalary" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Allowances" class="control-label">البدلات</label>
                    <input asp-for="Allowances" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Allowances" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Deductions" class="control-label">الخصومات</label>
                    <input asp-for="Deductions" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Deductions" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PaymentDate" class="control-label">تاريخ الدفع</label>
                    <input asp-for="PaymentDate" class="form-control" type="date" />
                    <span asp-validation-for="PaymentDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Notes" class="control-label">ملاحظات</label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="إنشاء" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">العودة للقائمة</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 