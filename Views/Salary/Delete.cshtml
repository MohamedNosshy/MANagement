@model Mangement.Models.Salary

@{
    ViewData["Title"] = "Delete Salary Record";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Delete Salary Record</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Are you sure you want to delete this salary record?</h4>
                    </div>
                    <dl class="row">
                        <dt class="col-sm-2">Employee</dt>
                        <dd class="col-sm-10">@Model.User?.Name</dd>
                        
                        <dt class="col-sm-2">Base Salary</dt>
                        <dd class="col-sm-10">@Model.BaseSalary.ToString("C")</dd>
                        
                        <dt class="col-sm-2">Total Salary</dt>
                        <dd class="col-sm-10">@Model.TotalSalary.ToString("C")</dd>
                        
                        <dt class="col-sm-2">Payment Date</dt>
                        <dd class="col-sm-10">@Model.PaymentDate.ToShortDateString()</dd>
                        
                        <dt class="col-sm-2">Status</dt>
                        <dd class="col-sm-10">
                            <span class="badge badge-@(Model.IsPaid ? "success" : "warning")">
                                @(Model.IsPaid ? "Paid" : "Pending")
                            </span>
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 