@model Mangement.Models.Attendance

@{
    ViewData["Title"] = "Delete Attendance";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Delete Attendance Record</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Are you sure you want to delete this attendance record?</h4>
                    </div>
                    <dl class="row">
                        <dt class="col-sm-2">Employee</dt>
                        <dd class="col-sm-10">@Model.User?.Name</dd>
                        
                        <dt class="col-sm-2">Check-in Date & Time</dt>
                        <dd class="col-sm-10">@Model.InDate.ToString("yyyy-MM-dd HH:mm")</dd>
                        
                        <dt class="col-sm-2">Check-out Date & Time</dt>
                        <dd class="col-sm-10">@Model.OutDate.ToString("yyyy-MM-dd HH:mm")</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 